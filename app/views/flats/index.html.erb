<div class="navbar d-flex p-3 bg-light">
  <h3>Simple Airbnb</h3>
  <div>
    <%= link_to "Add Flat", new_flat_path, class:"btn btn-outline-primary" %>
  </div>
</div>

<div class="container ">
  <h1 class="m-5">All our flats (<%= @flats.count %>)</h1>
  <div class="flat-wrapper d-flex row">
    <% @flats.each do |flat| %>
    <div class="single-flat m-3 d-flex flex-column">
      <div class="texts">
        <h1><%= flat.name %></h1>
        <p><%= flat.address %></p>
        <p class="icons"><i class="fa-solid fa-person"></i> <%= flat.number_of_guests %>   <i class="fa-solid fa-sterling-sign"></i> <%= flat.price_per_night %></p>
      </div>

      <div class="d-flex justify-content-between mt-2">
        <%= link_to "More Info", flats_path, class:"link" %>
        <%= link_to "Edit", edit_flat_path(flat), class:"link" %>
        <%= link_to "Delete Flat",
            flat_path(flat),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, 
            class:"link"%>
      </div>

    </div>
    <% end %>
  </div>
</div>