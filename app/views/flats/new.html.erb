<div class="navbar d-flex p-3 bg-light">
  <h3>Simple Airbnb</h3>
  <%= link_to "Add Flat", new_flat_path, class:"btn btn-outline-primary" %>
</div>

<div class="container">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit %>
  <% end %>
</div>
